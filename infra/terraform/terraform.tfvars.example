# ----------------------------------
# НАСТРОЙКИ РАЗВЕРТЫВАНИЯ
# ----------------------------------

# Локальное хранилище (рекомендуется для быстрого старта)
storage_type = "local_storage"

# Включить все BI-инструменты
deploy_metabase = true
deploy_superset = true

# Kafka Configuration
kafka_version = "7.4.0"
topic_1min    = "energy_data_1min"
topic_5min    = "energy_data_5min"

# Monitoring Configuration (Portainer)
portainer_version    = "2.19.4"
portainer_https_port = 9443
portainer_agent_port = 10010

# Версии для Airflow
airflow_version = "3.0.4"
redis_version   = "8.2-alpine"

# Порты для Airflow
airflow_webserver_port = 8080
airflow_flower_port    = 5555

# Пути к директориям (оставить по умолчанию)
clickhouse_base_path  = "../../volumes/clickhouse"
bi_postgres_data_path = "../../volumes/postgres/data"
remote_minio_path     = "/mnt/ssd/minio/data"

# Пути к директориям Airflow
airflow_redis_data_path = "../../volumes/airflow/redis"
airflow_dags_path       = "../../airflow/dags"
airflow_logs_path       = "../../volumes/airflow/logs"
airflow_plugins_path    = "../../volumes/airflow/plugins"
airflow_config_path     = "../../volumes/airflow/config"

